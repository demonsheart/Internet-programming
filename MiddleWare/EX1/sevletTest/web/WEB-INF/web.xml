<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>addBanner</servlet-name>
        <servlet-class>AdManager.AddBanner</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBanner</servlet-name>
        <url-pattern>/ad/addBanner</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showBanner</servlet-name>
        <servlet-class>AdManager.ShowBanner</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBanner</servlet-name>
        <url-pattern>/ad/showBanner</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showImage</servlet-name>
        <servlet-class>AdManager.ShowImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showImage</servlet-name>
        <url-pattern>/ad/showImage</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>servletTest</servlet-name>
        <servlet-class>servletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletTest</servlet-name>
        <url-pattern>/servletTest</url-pattern>
    </servlet-mapping>
</web-app>